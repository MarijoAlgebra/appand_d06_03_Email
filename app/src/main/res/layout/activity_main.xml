<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.bubulescu.email.MainActivity">

    <TextView
        android:id="@+id/tvAdresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresa primatelja"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etAdresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/tvSubjekt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subjekt"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etSubjekt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvPoruka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poruka"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etTijelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSalji"
        android:text="Å alji"/>

</LinearLayout>
